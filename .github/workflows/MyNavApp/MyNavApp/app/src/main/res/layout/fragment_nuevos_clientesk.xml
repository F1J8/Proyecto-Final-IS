<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="115dp"
    tools:context="Clientes.NuevosClienteskFragment"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="25dp"
        android:layout_marginTop="25dp"
        android:background="@color/whiteColor">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="727dp"
            android:layout_marginTop="25dp"
            android:background="@color/whiteColor">

            <LinearLayout
                android:id="@+id/LinLay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/whiteColor">

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Servicios"
                android:textSize="40sp"
                android:textColor="@color/whiteColor"/>

                //Cedula

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_DNI_N"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:background="@drawable/et_bg2"
                    android:digits="0123456789E-"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_DNI_N"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_Cedula"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>

                //Nombre

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Nombre_N"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_Nombre_N"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_Nombre"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>

                //Apellido

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Apellido_N"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_Apellido_N"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_Apellido"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>

                //Numero de tel

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Tel1_N"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_Tel1_N"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_Tel1"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>


                //Numero de tel2

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Tel2_N"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_Tel2_N"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_Tel2"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>

                //email

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Email_N"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_Email_N"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_Email"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>
                //residencia

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Residencia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_Residencia"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_Residencia"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>


                //Trabajo

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Trabajo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_Trabajo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_Trabajo"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>

                <!--                    botones-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/bt_bg3"
                    android:layout_marginTop="45dp"
                    android:clipToPadding="false">

                    <android.support.v7.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        android:background="@color/Transparent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bt_bg3">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/bolita1"
                                android:src="@drawable/ic_agregar_usuario2"
                                android:padding="10dp"/>
                            <!-- <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:textStyle="bold"
                                 android:layout_marginTop="10dp"
                                 android:textColor="@color/Gray"
                                 android:text="Clientes"/>-->

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bt_bg3"
                            >

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/bolita2"
                                android:src="@drawable/ic_modiifcar_usuario"
                                android:padding="10dp"/>
                            <!-- <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:textStyle="bold"
                                 android:layout_marginTop="10dp"
                                 android:textColor="@color/Gray"
                                 android:text="Activos"/>-->

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bt_bg3">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/bolita3"
                                android:src="@drawable/ic_eliminar_usuario"
                                android:padding="10dp"/>
                            <!-- <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:textStyle="bold"
                                 android:layout_marginTop="10dp"
                                 android:textColor="@color/Gray"
                                 android:text="Activos"/>-->

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>


        </ScrollView>


    </RelativeLayout>


</RelativeLayout>
