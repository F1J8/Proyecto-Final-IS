<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.PromocionesFragment"
    android:layout_marginTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="25dp"
        android:layout_marginTop="25dp"
        android:background="@color/whiteColor">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="727dp"
            android:layout_marginTop="25dp"
            android:background="@color/whiteColor">

            <LinearLayout
                android:id="@+id/LinLay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/whiteColor">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Servicios"
                    android:textSize="45sp"
                    android:textColor="@color/whiteColor"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/TipoPromocion"
                    android:animateLayoutChanges="true"/>

                //Cod

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_IDP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="left"
                    android:background="@drawable/et_bg2"
                    android:digits="0123456789"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_IDP"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_IDProm"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>

                //Nombre

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Titulo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_Titulo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_Titulo"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>

                //Apellido

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Duracion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_Duracion"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_Duracion"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>

                //Numero de tel

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_UbicacionI"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_UbicacionI"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_UbicacionI"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>


                //Numero de tel2

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_UbicacionF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_UbicacionF"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_UbicacionF"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Fecha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_Fecha"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_Fecha"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>
                //residencia

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Precio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/et_bg2"
                    android:textColorHint="@color/colorPrimaryDarkGreen"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_Precio"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:hint="@string/ti_Precio"
                        android:textColor="@color/colorPrimaryDarkGreen"
                        android:digits="0123456789B/."
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:background="@drawable/et_bg2"
                   android:layout_marginTop="10dp"
                   android:padding="5dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="40dp"

                       android:gravity="center"
                       android:textColor="@color/colorPrimaryDarkGreen"
                       android:textSize="18sp"
                       android:layout_marginTop="10dp"
                       android:text="@string/ti_Idioma"/>
                   <RadioGroup
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:padding="5dp"
                       android:gravity="center"
                       >

                       <CheckBox
                           android:id="@+id/esp"
                           android:layout_width="70dp"
                           android:layout_height="70dp"
                           android:layout_gravity="center"
                           android:layout_marginLeft="-50dp"
                           android:background="@drawable/ic_spain" />
                       <!--<ImageView
                       android:layout_width="70dp"
                       android:layout_height="70dp"
                       android:src="@drawable/ic_spain"/>-->
                       <CheckBox
                           android:id="@+id/ing"
                           android:layout_width="70dp"
                           android:layout_height="70dp"
                           android:layout_gravity="center"
                           android:layout_marginLeft="55dp"
                           android:layout_marginTop="-70dp"
                           android:background="@drawable/ic_united_states_of_america" />


                   </RadioGroup>
               </LinearLayout>

                <!--                    botones-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/bt_bg3"
                    android:layout_marginTop="35dp"
                    android:clipToPadding="false">

                    <android.support.v7.widget.CardView
                        android:id="@+id/AgregarPromocion"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        android:background="@color/Transparent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bt_bg3">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/bolita1"
                                android:src="@drawable/ic_agregar_usuario2"
                                android:padding="10dp"/>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/BuscarPromocion"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bt_bg3">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/bolita3"
                                android:src="@drawable/ic_eliminar_usuario"
                                android:padding="10dp"/>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/ModificarPromocion"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bt_bg3"
                            >

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/bolita2"
                                android:src="@drawable/ic_modiifcar_usuario"
                                android:padding="10dp"/>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/EliminarPromocion"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bt_bg3">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/bolita3"
                                android:src="@drawable/ic_eliminar_usuario"
                                android:padding="10dp"/>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>


        </ScrollView>


    </RelativeLayout>

</RelativeLayout>
