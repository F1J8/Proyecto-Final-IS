<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="125dp"
    android:orientation="vertical"
    tools:context="Prospectos.Prospectos6">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="25dp"
        android:layout_marginTop="25dp"
        android:background="@color/whiteColor">


        <LinearLayout
            android:id="@+id/LinLay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/whiteColor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Servicios"
                android:textSize="40sp"
                android:textColor="@color/whiteColor"/>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TipoPromocion"
                android:animateLayoutChanges="true"/>


            //Nombre

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_Marca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_bg2"
                android:textColorHint="@color/colorPrimaryDarkGreen"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_Marca"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:hint="@string/ti_Marca"
                    android:textColor="@color/colorPrimaryDarkGreen"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            //Apellido

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_Modelo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_bg2"
                android:textColorHint="@color/colorPrimaryDarkGreen"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_Modelo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:hint="@string/ti_Modelo"
                    android:textColor="@color/colorPrimaryDarkGreen"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            //Numero de tel

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_Precio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_bg2"
                android:textColorHint="@color/colorPrimaryDarkGreen"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_Precio"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:hint="@string/ti_Precio"
                    android:textColor="@color/colorPrimaryDarkGreen"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_FechaCompra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_bg2"
                android:textColorHint="@color/colorPrimaryDarkGreen"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_FechaCompra"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:hint="@string/ti_FechaCompra"
                    android:textColor="@color/colorPrimaryDarkGreen"
                    android:enabled="false"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>



            <!--                    botones-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bt_bg3"
                android:layout_marginTop="45dp"
                android:clipToPadding="false">

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="@color/Transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bt_bg3">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bolita1"
                            android:src="@drawable/ic_agregar_usuario2"
                            android:padding="10dp"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bt_bg3"
                        >

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bolita2"
                            android:src="@drawable/ic_modiifcar_usuario"
                            android:padding="10dp"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bt_bg3">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bolita3"
                            android:src="@drawable/ic_eliminar_usuario"
                            android:padding="10dp"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
